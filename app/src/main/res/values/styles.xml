<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Widget.AppCompat.Light.ActionBar">
    <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/mauVang</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/MyActionBar</item>

    </style>


    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/custom_toolbar_idnow</item>
        <item name="background">@drawable/custom_toolbar_idnow</item>
        <item name="titleTextStyle">@style/ActionBar.Solid.Ribbit.TitleTextStyle</item>
    </style>

    <style name="ActionBar.Solid.Ribbit.TitleTextStyle"
        parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#00000000</item>
    </style>

</resources>
